<mvc:View controllerName="enterprisesustainabilitypro.controller.AddSupplier"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page showHeader="false" backgroundDesign="List">
        <VBox class="sapUiSmallMargin">
            <f:Form id="FormAddSupplier" editable="true">
                <f:title>
                    <core:Title text="Add Supplier" />
                </f:title>
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Supplier Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Email">
                                <f:fields>
                                    <Input value="{Email}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="ContactNumber">
                                <f:fields>
                                    <Input value="{ContactNumber}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Contact Name">
                                <f:fields>
                                    <Input value="{ContactName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Address">
                                <f:fields>
                                    <Input value="{Address}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Country">
                                <f:fields>
                                    <Input value="{CountryID}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button id="idAddSupButton" type="Emphasized" text="Add" press="onAddSupAction"/>
                <Button type="Reject" text="Cancel"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>